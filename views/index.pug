extends layout

block content
  .container.mt-5.pt-3
    .row
      .col-12.col-sm-8.col-lg-6.col-xl-4.offset-sm-2.offset-lg-3.offset-xl-4
        form.input-group(method='post' action='/order/create')
          input#phone.form-control(type='number' placeholder='Số điện thoại khách hàng' aria-label='Số điện thoại khách hàng' name='phone' required)
          button.btn.btn-primary(type='submit') Tạo đơn hàng
