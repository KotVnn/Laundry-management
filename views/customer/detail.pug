extends ../layout

block content
  .container.mt-5.pt-3
    .row.mb-3
      .col-12.col-sm-8.col-lg-6.col-xl-4.offset-sm-2.offset-lg-3.offset-xl-4
        form(method='post' action='/customer/update').card
          h5.card-header.d-flex.justify-content-between.align-items-center Chi tiết khách hàng
            button.btn.btn-primary(type='submit' disabled) Cập nhập
          .card-body
            .input-group.my-2
              span.input-group-text Tên khách hàng
              input.form-control(type='text' placeholder='Nguyễn Văn A' aria-label='Tên khách hàng' name='fullName' value=`${customer && customer.fullName ? customer.fullName : ''}`)
            .input-group.my-2
              span.input-group-text Địa chỉ
              input.form-control(type='text' placeholder='83 Tô Thị' aria-label='Địa chỉ' name='address' value=`${customer && customer.address ? customer.address : ''}`)
            .input-group.my-2
              span.input-group-text Số điện thoại
              input.form-control(type='number' placeholder='0983660xxx' aria-label='Số điện thoại' name='phone' required value=`${customer ? customer.phone : ''}`)
            .input-group.my-2
              span.input-group-text Điểm thưởng
              input#point.form-control(type='number' placeholder='0' aria-label='Điểm thưởng' name='point' value=`${customer ? customer._doc.point : 0}` disabled)

    .row.mb-3
      .col-12.col-sm-8.col-lg-6.col-xl-4.offset-sm-2.offset-lg-3.offset-xl-4
        include ../order/parts/listOrder
        +elementOrder(customer.orders)
