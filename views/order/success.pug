extends ../layout

block content
	.container.mt-5
		.row
			.col-12
				.card.text-center
					h5.card-header=`#${order.id}`
					.card-body
						h5.card-title=order.customer.fullName
						p.card-text.number=`Tổng ${order.total} (${order.quantity} chiếc)`
						a.btn.btn-primary(href=`/order/${order.id}`) Xem chi tiết
					.card-footer.text-muted.timeText=order.date
