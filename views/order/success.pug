extends ../layout

block content
	.container.mt-5
		.row
			.col-12
				.card.text-center
					h5.card-header= `#${order.id}`
					.card-body
						h5.card-title= order.customer.fullName
						p.card-text= `Tổng ${order.total} (${order.quantity} chiếc)`
						a.btn.btn-primary(href=`/order/detail/${order.id}`) Xem chi tiết
					.card-footer.text-muted= `Thời gian: ${new Date(order.date).toLocaleDateString('vi-VN', { day: '2-digit', month: '2-digit', year: '2-digit', hour: '2-digit', minute: '2-digit', hour12: false})}`
